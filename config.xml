<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jookki.phoe" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OVMS Fireplace</name>
    <description>
        A simple fireplace app for climate control via OVMS
    </description>
    <author email="chris@arachnon.de" href="http://www.arachnon.de">
        Arachnon develeopment.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="landscape" />
    <plugin name="cordova-webintent" spec="github:cordova-misc/cordova-webintent.git" />
    <engine name="android" spec="^7.0.0" />
</widget>
